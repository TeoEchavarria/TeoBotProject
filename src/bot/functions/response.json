{
    "type": "json_schema",
    "json_schema": {
        "name": "suggest_presentation_formats",
        "description": "Generate a list of creative and effective formats to present the solution to the given question.",
        "parameters": {
            "type": "object",
            "properties": {
                "options": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "title": {"type": "string"},
                            "description": {"type": "string"},
                            "type": {"type": "string"},
                            "payload": {"type": "object"}
                        },
                        "required": ["title", "description", "type", "payload"]
                    }
                }
            },
            "required": ["options"]
        }
    }
}
